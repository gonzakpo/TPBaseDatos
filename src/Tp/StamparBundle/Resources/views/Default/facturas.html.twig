{% extends '::base.html.twig' %}

{% block body %}
<h1>Facturas con importe mayor a $1000</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Id Cliente</th>
            <th>Total</th>
            <th>Fecha</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('factura_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.id_cliente }}</td>
            <td>{{ entity.total }}</td>
            <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('factura_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('factura_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('factura_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}